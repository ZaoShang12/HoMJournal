<main>
    <img src="img/SE-GitHub-image.png" alt="NCHS Logo" />
    <h1>Habits of Mind Journal Edit</h1>
    <div>
        
        <form id="editForm">
            <input type="hidden" id="entryId" value="<%= entry._id %>"> 
            
            <p>Date: <%= new Date(entry.date).toLocaleDateString() %></p>
            <p>Habit of Mind: <%= entry.habit %></p>
            
            <fieldset>
                <legend>Habit of Mind:</legend>
                <% for(let habit of habits) { %>
                    <label>
                        <input type="radio" class="habits" name="habits" value="<%= habit %>" <%= entry.habit === habit ? 'checked' : '' %> /> 
                        <%= habit %>
                    </label>
                    <br/>
                <% } %>
            </fieldset>

            <label>Journal Entry
                <textarea class="content"><%= entry.content %></textarea>
            </label>

            <input type="submit" class="submit" value="Submit" />
        </form>
    </div>
</main>
<!-- End of Main Site -->

<script src="/js/editEntry.js"></script>
